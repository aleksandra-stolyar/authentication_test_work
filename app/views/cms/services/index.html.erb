<h1>Services list</h1>

<table>
  <tr>
    <th>#</th>
    <th>Logo</th>
    <th>Name</th>
    <th>Link</th>
    <th></th>
  </tr>

  <% @services.each do |service| %>
    <tr>
      <td></td>
      <td><%= image_tag(service.logo_url(:thumb)) if service.logo? %></td>
      <td><%= service.name %></td>
      <td><%= service.link %></td>
      <% if current_user.can_grant_access_to_roles? %>
        <td><%= link_to "Grant access", grant_access_cms_services_path(service) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
