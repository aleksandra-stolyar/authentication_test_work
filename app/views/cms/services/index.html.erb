<h1>Services list</h1>

<table>
  <tr>
    <th>#</th>
    <th>Logo</th>
    <th>Name</th>
    <th>Link</th>
    <th></th>
  </tr>

  <% @services.each do |service| %>
    <tr>
      <td></td>
      <td><%= image_tag(service.logo_url(:thumb)) if service.logo? %></td>
      <td><%= service.name %></td>
      <td><%= service.link %></td>
      <td><%= link_to "Add users", edit_cms_service_path(service) %></td>
    </tr>
  <% end %>
</table>
