<h1>Add new user</h1>

<%= form_for @user, url: { action: "update" }, html: { multipart: true } do |f| %>
  Avatar: <%= f.file_field :avatar %>
  <%= image_tag(@user.avatar_url(:thumb)) if @user.avatar? %>
  Full name: <%= f.text_field :full_name %>
  Position: <%= f.text_field :position %>
  Email: <%= f.text_field :email %>
  Role: <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  Give access to services: <%= f.collection_check_boxes :service_ids, Service.all, :id, :name %>
  <%= f.hidden_field :avatar_cache %>
  <%= f.submit "Submit" %>
<% end %>
