<h1>Login</h1>
<div class="row">
  <%= form_for :session, class: "form-horizontal" do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <div>
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <div>
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
